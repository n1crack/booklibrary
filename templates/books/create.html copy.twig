{% extends 'base.html.twig' %}

{% block title %}Books Library!{% endblock %}

{% block body %}


<div class="container mx-auto">
<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg">

     <div class="p-5 mt-5">
     <div class="m-5">
        <h1 class="font-bold text-2xl">Book Library</h1>
      </div>
            

      <div class="m-5">
          <a href="/" class="hover:text-blue-500 p-3 border border-gray-400">< Back</a>
      </div>

      <div>
      <div class="flex flex-col sm:flex-row">
          <div class="w-full p-2">
            <div class="m-5 font-bold"> Add New Book</div>
            <form method="POST" action="/books" enctype="multipart/form-data"> 
              <div class="flex flex-col mb-3">
                <label class=" font-medium text-sm text-gray-700" for="name">Book Name</label>
                <input id="name" placeholder="Name" type="text" name="name" value="" autofocus="autofocus" class=" p-3 border border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full" >
              </div>

              <div class="flex flex-col mb-3">
                <label class=" font-medium text-sm text-gray-700" for="author">Book Author</label>
                <input id="author" placeholder="Author" type="text" name="author" value="" autofocus="autofocus" class=" p-3 border border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full" >
              </div>

              <div class="flex flex-col mb-3">
                <label class=" font-medium text-sm text-gray-700" for="image">Image Upload</label>
                <input id="image"  type="file" name="image" value="" autofocus="autofocus" class=" p-3 border border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full" >
              </div>

              <label class=" font-medium text-sm text-gray-700" for="category">Category</label>
              <select class="p-3 border border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full rounded-md shadow-sm w-full" name="category">
                  {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.name }}</option>
                   {% endfor %}
              </select>

              <div class="mt-5">
                <button type="submit" class="inline-flex items-center px-4 py-2 bg-gray-800 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 active:bg-gray-900 focus:outline-none focus:border-gray-900 focus:ring focus:ring-gray-300 disabled:opacity-25 transition">Save</button>
              </div>

            </form>
          </div>
          
          <div class="sm:ml-auto sm:w-64 bg-gray-200 rounded-lg p-5">
            <div class="font-bold mb-2">Category List: </div>
            <ul class="list-disc list-inside">
              {% for category in categories %}
                  <li><a href="/books/{{ category.id }}">{{ category.name }}</a></li>
              {% endfor %}
            <ul>

          </div>
      </div>
      </div>

      </div>
  </div>
</div>
</div>

{% endblock %}
